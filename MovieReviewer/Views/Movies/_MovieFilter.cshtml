@using MovieReviewer.Models

@model MovieFilterModel

<form action="@Url.Action("Index")" method="post">
    <div class="form-row">
        <div class="col-2">
            <input asp-for="Title" class="form-control" type="text" placeholder="Title" />
        </div>
        <div class="col-2">
            <input asp-for="Genre" class="form-control" type="text" placeholder="Genre" />
        </div>
        <div class="col-2">
            <input asp-for="ReleaseYear" class="form-control" type="number" placeholder="Year"/>
        </div>
        <div class="col-2">
            <input asp-for="Score" class="form-control" type="number" placeholder="Score" />
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
    </div>
</form>